@page "{id:int?}"
@model Matei_Raul_Lab2.Pages.Books.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Price)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.PublishingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.PublishingDate)
        </dd>
        
        <dt class="col-sm-2">
            Authors
        </dt>
        <dd class="col-sm-10">
            @if (Model.Book.Authors != null)
            {
                @Model.Book.Authors.FullName;
            }
        </dd>
        
        <dt class="col-sm-2">
            Publisher
        </dt>
        <dd class="col-sm-10">
            @if (Model.Book.Publisher != null)
            {
                @Model.Book.Publisher.PublisherName
            }
        </dd>
        
        <dt class="col-sm-2">
            Categories
        </dt>
        <dd class="col-sm-10">
            @if (Model.Book.BookCategories != null && Model.Book.BookCategories.Any())
            {
                foreach (var bc in Model.Book.BookCategories)
                {
                    <span>@bc.Category.ID - @bc.Category.CategoryName</span><br />
                }
            }
            else
            {
                <span>No categories assigned</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Book.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
