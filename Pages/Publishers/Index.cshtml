@page "{id:int?}"
@model Matei_Raul_Lab2.Pages.Publishers.IndexModel

@{
    ViewData["Title"] = "Publishers";
}



<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Publisher[0].PublisherName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PublisherData.Publishers) {

            var selectedRow = item.ID == Model.PublisherID ? "table-success" : "";
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.PublisherName)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@if (Model.PublisherData.Books != null && Model.PublisherData.Books.Any())
{
    <h3>Books Edited by Selected Publisher</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var b in Model.PublisherData.Books)
        {
            <tr>
                <td>@b.Title</td>
                <td>@(b.Authors != null ? (b.Authors.FullName) : "")</td>
            </tr>
        }
        </tbody>
    </table>
}