@page "{id:int?}"
@model Matei_Raul_Lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}



<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategoryData.Categories)
        {

            var selectedRow = item.ID == Model.CategoryData.CategoryID ? "table-success" : "";
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
              
        
}
    </tbody>
</table>

@if (Model.CategoryData.Books != null && Model.CategoryData.Books.Any())
{
    <h3>Books in Selected Category</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.CategoryData.Books)
            {
                <tr>
                    <td>@b.Title</td>
                    <td>@(b.Authors != null ? b.Authors.FullName : "")</td> 
                </tr>
            }
        </tbody>
    </table>
}

